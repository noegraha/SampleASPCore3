@model SampleASPCore.Models.Pengguna
@{
    Layout = "_Layout";
}
<h2>Form Login</h2>
<div class="row">
    @if (ViewData["Pesan"] != null)
    {
        @Html.Raw(ViewData["Pesan"])
    }
</div>
<br />
<div class="col-md-6">
    <form asp-action="Login">
        <div asp-validation-summary="ModelOnly" class="text-danger" />
        <div class="form-group">
            <label asp-for="Username" class="control-label">Username</label>
            <input asp-for="Username" type="text" class="form-control" />
            <span asp-validation-for="Username" class="text-danger" /> 
        </div>
        <div class="form-group">
            <label asp-for="Password" class="control-label">Password</label>
            <input asp-for="Password" type="password" class="form-control" />
            <span asp-validation-for="Password" class="text-danger" />
        </div>
        <div class="form-group">
            <input type="submit" value="Submit" class="btn btn-primary" />
        </div>
    </form>
</div>