@model  SampleASPCore.Models.Pengguna
@{
    Layout = null;
}

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="~/css/global.css" rel="stylesheet" />
    <link href="~/css/sb-admin-2.min.css" rel="stylesheet" />
</head>
<body>

    <h2>Login Form</h2>
    
    <form asp-action="Login2" >
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-4"></div>
                    <div class="col-md-4">
                    <div class="imgcontainer">
                        <img src="~/images/avatar.gif" alt="Avatar" class="center">
                    </div>

                    <div class="container">
                        <div class="form-group">
                            <label asp-for="Username"><b>Username</b></label>
                            <input asp-for="Username" type="text" placeholder="Enter Username" required>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password"><b>Password</b></label>
                            <input asp-for="Password" type="password" placeholder="Enter Password" required>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-primary" />
                        </div>
                        <label>
                            <input type="checkbox" checked="checked" name="remember"> Remember me
                        </label>
                    </div>

                    <div class="container" style="background-color:#f1f1f1">
                        <button type="button" class="cancelbtn">Cancel</button>
                        <span class="psw">Forgot <a href="#">password?</a></span>
                    </div>
                </div>
            </div>
           
        </div>
        
    </form>
       
</body>
</html>
